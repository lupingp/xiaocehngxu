.search-box {
  top: 25rpx;
}
.type-list-tag {
  position: relative;
  display: inline-block;
  width: 90vw;
  margin: 110rpx 0 0 5vw;
  padding: 10rpx 20rpx;
  text-align: center;
  color: #6d6d6d;
  vertical-align: middle;
  background-color: #f8f8f8;
  border-radius: 5px 5px 0 0;
  box-sizing: border-box;
}
.icon-sousuo button {
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  opacity: 0;
}
.type-list {
  position: relative;
  overflow: hidden;
  height: calc(100vh - 190rpx);
  background-color: white;
  border-radius: 5px;
}
.type-list-left {
  overflow-x: hidden;
  width: 35%;
  height: 100%;
  font-size: 1em;
}
.type-list-left text {
  pointer-events: none;
}
.type-list-left icon {
  margin: -10rpx 10rpx 0 0;
  font-size: 1em;
  color: #555;
}
.type-list-right {
  overflow-x: hidden;
  right: 0;
  width: 65%;
  height: 100%;
}
.type-list-left, .type-list-right {
  position: absolute;
}
.type-list-left > view,
.type-list-right > view {
  padding: 10rpx;
  line-height: 40rpx;
  border-bottom: 1px solid #d8d8d8;
}
.type-list-right > view:active {
  background-color: #eee;
  transition: .2s;
}
.type-list-right > view {
  border-bottom: 1px solid #eee;
}
view.select {
  margin-top: -1px;
  color: #444;
  background-color: white;
  border-top: 1px solid #fff;
  border-bottom: none;
}
.select::before {
  content: '';
  position: absolute;
  left: 0;
  width: 100%;
  height: 100%;
  margin-top: 50rpx;
  background-color: rgba(0, 0, 0, .1);
  border-top-right-radius: 8px;
  pointer-events: none;
}
.select::after {
  content: '';
  position: absolute;
  left: 0;
  width: 100%;
  height: 100%;
  margin-top: -10rpx;
  background-color: rgba(0, 0, 0, .1);
  border-bottom-right-radius: 8px;
  transform: translateY(-100%);
  pointer-events: none;
}
/* 搜索结果医生 */
.doctor-scroll {
  height: 100%;
}
.doctor {
  width: 90%;
  padding: 2%;
  margin: 10rpx auto;
  background-color: #eee;
  border-radius: 5px;
}
.user-icon {
  display: inline-block;
  margin-right: 2%;
  vertical-align: middle;
  pointer-events: none;
}
.doctor-name {
  display: inline-block;
  width: 40%;
  text-indent: .5em;
  font-weight: 500;
  pointer-events: none;
}
.doctor-tag {
  color: #888;
  pointer-events: none;
}