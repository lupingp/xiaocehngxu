.doctor-info {
  margin-top: 50rpx;
  padding: 30rpx 0;
}
.doctor-img {
  width: 120rpx;
  height: 120rpx;
  margin: 0 30rpx;
  vertical-align: middle;
  border-radius: 60rpx;
  box-shadow: 2px 2px 10px var(--shadow-color);
}
.doctor-info .img-right {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  align-items: center;
  float: right;
  width: calc(100% - 180rpx);
  height: 120rpx;
}
.doctor-info text {
  width: 100%;
  color: #888;
}
text.doctor-name {
  font-size: 1.2em;
  color: #222;
}
text.doctor-tag {
  margin-top: -10rpx;
  font-size: .9em;
}
.doctor-introduce {
  overflow: hidden;
  max-height: 0;
  padding: 20rpx;
  padding-bottom: 0;
  margin: 30rpx;
  margin-bottom: 0;
  border-top: 1px solid transparent;
  transition: .8s;
}
.doctor-introduce.focus {
  border-top: 1px solid #eee;
  max-height: 100vh;
}
text.introduce-tag {
  display: block;
  color: #333;
}
text.introduce-content {
  padding-left: 2em;
  font-size: .8em;
}
.doctor-name .iconfont {
  margin-left: 20rpx;
  color: #ccc;
  font-size: .9em;
}

.muen {
  position: relative;
  overflow: hidden;
  margin-top: 30rpx;
}
.muen-list {
  display: flex;
}
.muen-list text {
  position: relative;
  width: 100%;
  padding: 5px;
  z-index: 5;
  color: #fff;
  text-align: center;
  box-sizing: border-box;
}
.muen-list .focus {
  z-index: 1;
  color: #333;
}
.muen-list .focus::after,
.muen-list .focus::before {
  content: '';
  position: absolute;
  top: 0;
  width: 100vw;
  height: 100%;
  background-color: rgba(181, 207, 255, .6);
  border-radius: 0 0 20rpx 20rpx;
  box-shadow: 0 -2px 2px rgba(0, 0, 0, .05) inset;
  pointer-events: none;
}
.muen-list .focus::after {
  left: 0;
  margin-left: 100%;
}
.muen-list .focus::before {
  right: 0;
  margin-right: 100%;
}
.muen-content {
  padding: 20rpx 10rpx;
}
.muen-content .page > view {
  overflow: hidden;
  max-height: 0;
  transition: .8s;
}
.muen-content .page .focus {
  max-height: 100vh;
}
.center-text {
  display: block;
  margin: 10rpx 0;
  font-size: .85rem;
  text-align: center;
  color: #888;
}
.button {
  display: block;
  width: 40vw;
  padding: 5rpx 20rpx;
  margin: 25rpx auto;
  color: #75a5ff;
  font-size: 1rem;
  line-height: 50rpx;
  text-align: center;
  border: 2rpx solid;
  border-radius: 20px;
}
.button:active {
  color: #fff;
  background-color: #75a5ff;
}

.qrcode {
  display: block;
  width: 50vw;
  height: 50vw;
  margin: 0 auto;
}

/* 咨询 */
